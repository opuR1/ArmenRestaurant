<Page x:Class="ArmenRestauran.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Главная" Background="Transparent">

    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10">
            <Button x:Name="BtnMenu" Content="⋮" FontSize="24" FontWeight="Bold" 
                    Background="Transparent" Foreground="#8B0000" BorderThickness="0"
                    Width="40" Height="40" Click="BtnMenu_Click">
                <Button.ContextMenu>
                    <ContextMenu x:Name="MainContextMenu" Background="#F5F5DC" BorderBrush="#D4AF37">
                        <MenuItem Header="Профиль" Click="MenuProfile_Click" Foreground="#8B0000"/>
                        <MenuItem Header="Заказы" Click="MenuOrders_Click" Foreground="#8B0000"/>
                        <MenuItem Header="Корзина" Click="MenuCart_Click" Foreground="#8B0000"/>
                        <Separator/>
                        <MenuItem x:Name="MiCategories" Header="Категории" Foreground="#8B0000"/>
                        <Separator/>
                        <MenuItem x:Name="AdminPanel" Header="Админ панель" Click="MenuAdmin_Click" Foreground="#8B0000" Visibility="Collapsed"/>
                        <MenuItem x:Name="ManagerPanel" Header="Управление бронированием" Click="ManagerPanel_Click" Foreground="#8B0000" Visibility="Collapsed"/>
                        <MenuItem x:Name="WaiterPanel" Header="Управление заказами" Click="WaiterPanel_Click" Foreground="#8B0000" Visibility="Collapsed"/>
                        <MenuItem Header="ВЫХОД" Click="MenuLogout_Click" Foreground="DarkRed" FontWeight="Bold"/>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
        </StackPanel>

        <Frame x:Name="ChildFrame" NavigationUIVisibility="Hidden" Margin="0,50,0,0"/>
    </Grid>
</Page>