<Window x:Class="ArmenRestauran.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArmenRestauran"
        mc:Ignorable="d"
        Title="Араратская долина" Height="750" Width="800" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Background="#F5F5DC">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#8B0000" Grid.Row="0" BorderBrush="#D4AF37" BorderThickness="0,0,0,3">
            <Grid>
                <Button x:Name="BtnBack" Content="← Назад" 
                        HorizontalAlignment="Left" VerticalAlignment="Center" 
                        Margin="15,0,0,0" Padding="10,5"
                        Background="#D4AF37" Foreground="#8B0000" 
                        FontWeight="Bold" BorderThickness="0"
                        Visibility="Collapsed" Click="BtnBack_Click"/>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="АРАРАТСКАЯ ДОЛИНА" Foreground="#D4AF37" FontSize="24" FontWeight="Bold" FontFamily="Georgia"/>
                </StackPanel>
            </Grid>
        </Border>

        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Navigated="MainFrame_Navigated"/>
    </Grid>
</Window>