        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="ПАНЕЛЬ АДМИНИСТРАТОРА" FontSize="28" FontWeight="Bold" Margin="0,0,0,40" Foreground="#8B0000"/>
            <Button Content="УПРАВЛЕНИЕ МЕНЮ" Width="350" Height="70" Margin="0,10" Background="#8B0000" Foreground="Gold" FontSize="18" FontWeight="Bold" Click="BtnMenu_Click"/>
            <Button Content="УПРАВЛЕНИЕ ПОЛЬЗОВАТЕЛЯМИ" Width="350" Height="70" Margin="0,10" Background="#8B0000" Foreground="Gold" FontSize="18" FontWeight="Bold" Click="BtnUsers_Click"/>
        </StackPanel>
    </Grid>
</Page>