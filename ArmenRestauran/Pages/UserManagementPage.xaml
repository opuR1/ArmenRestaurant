<Page x:Class="ArmenRestauran.Pages.UserManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Пользователи" Loaded="Page_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="TBoxSearch" Width="200" TextChanged="FilterChanged"/>
            <TextBlock Text="Роль:" VerticalAlignment="Center" Margin="20,0,10,0"/>
            <ComboBox x:Name="CbRoleFilter" Width="150" SelectionChanged="FilterChanged">
                <ComboBoxItem Content="Все"/>
                <ComboBoxItem Content="Администратор"/>
                <ComboBoxItem Content="Клиент"/>
            </ComboBox>
            <Button Content="Назад" Margin="50,0,0,0" Width="100" Click="BtnBack_Click"/>
        </StackPanel>
        <DataGrid x:Name="DGridUsers" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" MouseDoubleClick="DGridUsers_DoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="*"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="2*"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding RoleName}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>