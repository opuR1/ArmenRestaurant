<Page x:Class="ArmenRestauran.Pages.UserEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Редактирование пользователя">
    <Grid Background="#F5F5F5">
        <Border Background="White" CornerRadius="15" Padding="30" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <StackPanel>
                <TextBlock Text="ДАННЫЕ ПОЛЬЗОВАТЕЛЯ" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center" Foreground="#8B0000"/>

                <Label Content="Логин:"/>
                <TextBox x:Name="TBoxLogin" Margin="0,0,0,15" Padding="5"/>

                <Label Content="Имя:"/>
                <TextBox x:Name="TBoxFirstName" Margin="0,0,0,15" Padding="5"/>
                <Label Content="Фамилия:"/>
                <TextBox x:Name="TBoxLastName" Margin="0,0,0,15" Padding="5"/>
                <Label Content="Отчество:"/>
                <TextBox x:Name="TBoxSurName" Margin="0,0,0,15" Padding="5"/>
                <Label Content="Пароль:"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,0,0,15" Padding="5" />

                <Label Content="Роль:"/>
                <ComboBox x:Name="CbRoles" Margin="0,0,0,25" DisplayMemberPath="Name" SelectedValuePath="ID"/>

                <Button Content="СОХРАНИТЬ ИЗМЕНЕНИЯ" Click="BtnSave_Click" Background="#8B0000" Foreground="Gold" FontWeight="Bold" Height="40"/>
                <Button Content="ОТМЕНА" Click="BtnBack_Click" Margin="0,10,0,0" Background="Transparent" BorderThickness="0" Foreground="Gray"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>