<Page x:Class="ArmenRestauran.Pages.MenuEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Редактирование блюда">
    <Grid Background="#F5F5F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="White" Margin="10" CornerRadius="10" Padding="15">
            <StackPanel>
                <TextBlock Text="ДАННЫЕ БЛЮДА" FontWeight="Bold" Margin="0,0,0,10"/>
                <Label Content="Название:"/> 
                <TextBox x:Name="TBoxName" Margin="0,5"/>
                <Label Content="Цена:"/>
                <TextBox x:Name="TBoxPrice" Margin="0,5"/>
                <Label Content="Описание:"/>
                <TextBox x:Name="TBoxDesc" Margin="0,5"/>
                <Button Content="СОХРАНИТЬ" Click="BtnSave_Click" Background="#8B0000" Foreground="Gold" Margin="0,15"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="White" Margin="10" CornerRadius="10" Padding="15">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="СОСТАВ БЛЮДА" FontWeight="Bold" Margin="0,0,0,10"/>

                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="0,10,0,0">
                    <ComboBox x:Name="CbIngredients" Width="200" DisplayMemberPath="IngredientName" SelectedValuePath="IngredientID" />
                    <TextBox x:Name="TBoxQty" Width="60" Margin="10,0" ToolTip="Количество"/>
                    <Button Content="+" Click="BtnAddIngredient_Click" Width="40" Background="Green" Foreground="White"/>
                </StackPanel>

                <DataGrid x:Name="DGridRecipe" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Ингредиент" Binding="{Binding IngredientName}" Width="*"/>
                        <DataGridTextColumn Header="Кол-во" Binding="{Binding QuantityRequired}" Width="100"/>
                        <DataGridTextColumn Header="Ед." Binding="{Binding Unit}" Width="50"/>
                        <DataGridTemplateColumn Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Удалить" Click="BtnDeleteIngredient_Click" Background="Red" Foreground="White" FontSize="10"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>
    </Grid>
</Page>