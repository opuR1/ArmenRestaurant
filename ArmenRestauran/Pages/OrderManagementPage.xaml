<Page x:Class="ArmenRestauran.Pages.OrderManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArmenRestauran.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderManagementPage">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="20,10">
            <TextBox x:Name="TBoxSearch" Width="150" ToolTip="Поиск по логину" TextChanged="FilterChanged"/>

            <ComboBox x:Name="CbStatusFilter" Width="150" Margin="10,0" SelectionChanged="FilterChanged">
                <ComboBoxItem Content="Все брони"/>
                <ComboBoxItem Content="Ожидается"/>
                <ComboBoxItem Content="Подтверждена"/>
                <ComboBoxItem Content="Отменена"/>
            </ComboBox>

            <DatePicker x:Name="DpFilter" SelectedDateChanged="FilterChanged" Margin="10,0"/>

            <Button Content="НОВАЯ БРОНЬ" Click="BtnAddBooking_Click" Background="#8B0000" Foreground="Gold" Padding="10,5"/>
        </StackPanel>

        <DataGrid x:Name="DGridBookings" Grid.Row="1" Margin="20,0,20,20" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата/Время" Binding="{Binding BookingDate, StringFormat={}{0:dd.MM HH:mm}}" Width="120"/>
                <DataGridTextColumn Header="Стол №" Binding="{Binding TableNumber}" Width="70"/>
                <DataGridTextColumn Header="Мест" Binding="{Binding Capacity}" Width="60"/>
                <DataGridTextColumn Header="Клиент" Binding="{Binding CustomerLogin}" Width="*"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="130"/>
                <DataGridTemplateColumn Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Изменить" Click="BtnEdit_Click" Margin="2"/>
                                <Button Content="Удалить" Click="BtnDelete_Click" Background="Red" Foreground="White" Margin="2"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
