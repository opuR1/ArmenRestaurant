<Window x:Class="ArmenRestauran.Pages.ClientSelectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор клиента" Height="350" Width="350"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Выберите клиента:" FontWeight="Bold" Margin="0,0,0,10"/>

        <ListBox x:Name="LbClients" Grid.Row="1" DisplayMemberPath="Login" 
                 SelectedValuePath="UserID" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Выбрать" x:Name="BtnSelect" Width="80" Margin="0,0,10,0" 
                    Click="BtnSelect_Click"/>
            <Button Content="Отмена" x:Name="BtnCancel" Width="80" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>