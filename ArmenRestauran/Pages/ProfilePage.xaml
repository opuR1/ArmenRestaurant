<Page x:Class="ArmenRestauran.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Мой Профиль">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Border Background="White" CornerRadius="15" Padding="30" Width="400">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Opacity="0.1"/>
            </Border.Effect>

            <StackPanel>
                <Ellipse Width="80" Height="80" Fill="#F5F5DC" Stroke="#D4AF37" StrokeThickness="2" Margin="0,0,0,20"/>

                <TextBlock x:Name="TblRole" FontSize="14" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,20" FontWeight="Bold"/>

                <Label Content="Фамилия:" Foreground="#8B0000" FontWeight="Bold"/>
                <TextBox x:Name="TbxLastName" IsReadOnly="True" Margin="0,0,0,10"/>

                <Label Content="Имя:" Foreground="#8B0000" FontWeight="Bold"/>
                <TextBox x:Name="TbxFirstName" IsReadOnly="True" Margin="0,0,0,10"/>

                <Label Content="Отчество:" Foreground="#8B0000" FontWeight="Bold"/>
                <TextBox x:Name="TbxSurName" IsReadOnly="True" Margin="0,0,0,10"/>

                <Label Content="Логин:" Foreground="#8B0000" FontWeight="Bold"/>
                <TextBox x:Name="TbxLogin" IsReadOnly="True" Margin="0,0,0,10"/>

                <Label Content="Новый пароль (оставьте пустым):" Foreground="#8B0000" FontWeight="Bold" x:Name="LblPass" Visibility="Collapsed"/>
                <PasswordBox x:Name="PbxPassword" Visibility="Collapsed" Margin="0,0,0,10"/>

                <Grid Margin="0,20,0,0">
                    <Button x:Name="BtnEdit" Content="РЕДАКТИРОВАТЬ" Click="BtnEdit_Click" 
                            Background="#D4AF37" Foreground="#8B0000" FontWeight="Bold" Height="35"/>
                    <Button x:Name="BtnSave" Content="СОХРАНИТЬ" Click="BtnSave_Click" Visibility="Collapsed"
                            Background="#8B0000" Foreground="Gold" FontWeight="Bold" Height="35"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Page>