<Page x:Class="ArmenRestauran.Pages.IngredientsManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Управление ингредиентами">
    <Grid Background="#F5F5F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <Border Background="White" Margin="10" CornerRadius="10" Padding="10">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="СПИСОК ИНГРЕДИЕНТОВ" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Foreground="#8B0000"/>
                <DataGrid x:Name="DGridIngredients" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="DGridIngredients_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Название" Binding="{Binding IngredientName}" Width="*"/>
                        <DataGridTextColumn Header="Остаток" Binding="{Binding StockQuantity}" Width="100"/>
                        <DataGridTextColumn Header="Ед. изм." Binding="{Binding Unit}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>

        <Border Grid.Column="1" Background="White" Margin="10" CornerRadius="10" Padding="20">
            <StackPanel x:Name="EditPanel">
                <TextBlock x:Name="TblHeader" Text="ДОБАВИТЬ НОВЫЙ" FontSize="16" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <Label Content="Название:"/>
                <TextBox x:Name="TBoxName" Margin="0,0,0,10" Padding="5"/>

                <Label Content="Количество на складе:"/>
                <TextBox x:Name="TBoxStock" Margin="0,0,0,10" Padding="5"/>

                <Label Content="Единица измерения:"/>
                <ComboBox x:Name="CbUnits" Margin="0,0,0,20">
                    <ComboBoxItem Content="кг"/>
                    <ComboBoxItem Content="г"/>
                    <ComboBoxItem Content="л"/>
                    <ComboBoxItem Content="мл"/>
                    <ComboBoxItem Content="шт"/>
                </ComboBox>

                <Button Content="СОХРАНИТЬ" Click="BtnSave_Click" Background="#8B0000" Foreground="Gold" Height="35" FontWeight="Bold"/>
                <Button Content="ОЧИСТИТЬ" Click="BtnClear_Click" Margin="0,10" Background="Transparent" BorderThickness="1"/>
                <Button x:Name="BtnDelete" Content="УДАЛИТЬ" Click="BtnDelete_Click" Background="#FF4444" Foreground="White" Visibility="Collapsed"/>

                <Button Content="НАЗАД" Click="BtnBack_Click" Margin="0,30,0,0" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>